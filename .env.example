# RPC CONFIGURATION & PERFORMANCE OPTIONS
# â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

# Timeout for RPC calls (milliseconds)
RPC_TIMEOUT_MS=10000

# Retry attempts on failure
RPC_RETRY_ATTEMPTS=3

# Delay between retries (milliseconds) - uses exponential backoff
RPC_RETRY_DELAY_MS=500

# Maximum concurrent RPC calls to prevent overwhelming endpoints
RPC_MAX_CONCURRENT=50

# Enable caching of RPC responses (recommended)
RPC_CACHE_ENABLED=true

# RPC cache TTL (seconds) - how long to cache responses
RPC_CACHE_TTL_SECONDS=300

# Log RPC calls for debugging (disable in production for performance)
RPC_LOG_ENABLED=false

# Log level for RPC calls (debug, info, warn, error)
RPC_LOG_LEVEL=debug

